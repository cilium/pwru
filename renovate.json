{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "schedule": [
    "on friday"
  ],
  "groupName": "all dependencies",
  "lockFileMaintenance": {
    "enabled": false
   },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "groupName": "all dependencies"
    }
  ],
  "separateMajorMinor": false
}
